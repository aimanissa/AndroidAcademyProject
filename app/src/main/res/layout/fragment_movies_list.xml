<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/background">

    <LinearLayout
        android:id="@+id/title_layout"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:layout_marginTop="44dp"
        android:layout_marginBottom="728dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:layout_width="200dp"
            android:layout_height="20dp"
            android:layout_gravity="center_vertical"
            android:text="Movies list"
            android:textSize="14sp"
            android:textStyle="bold"
            android:drawablePadding="8dp"
            android:layout_marginTop="11dp"
            android:layout_marginBottom="9dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="135dp"
            android:textColor="@color/text_white_color"
            android:gravity="center_vertical"
            app:drawableLeftCompat="@drawable/movie_list_image_view" />

    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:layout_width="170dp"
        android:layout_height="296dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="18dp"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title_layout" >

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/card_view_color_bg"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/card_view_background" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/avengers_preview"
            android:scaleType="centerCrop" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/card_view_shadow_mask"/>

        <TextView
            android:id="@+id/age_limit_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/age_background_item"
            android:layout_marginStart="6dp"
            android:layout_marginTop="8dp"
            android:text="13+"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:textColor="@color/text_white_color"
            android:textSize="12sp"
            android:textStyle="bold"
            android:layout_gravity="start"
            android:gravity="center"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/like_item"
            android:layout_gravity="end"
            android:layout_marginTop="13dp"
            android:layout_marginEnd="6dp" />

        <TextView
            android:id="@+id/genre_card_text_view"
            android:layout_width="146dp"
            android:layout_height="12dp"
            android:layout_marginTop="214dp"
            android:layout_marginStart="6dp"
            android:layout_marginEnd="14dp"
            android:text="@string/genre_text_view"
            android:textColor="@color/genre_pink"
            android:textSize="8sp"
            android:gravity="center_vertical"/>

        <LinearLayout
            android:id="@+id/reviews_layout"
            android:layout_width="wrap_content"
            android:layout_height="12dp"
            android:layout_marginTop="228dp"
            android:layout_marginStart="6dp"
            android:layout_marginEnd="53dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/genre_card_text_view">

            <ImageView
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="4dp"
                android:background="@drawable/star_icon_1" />

            <ImageView
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="4dp"
                android:background="@drawable/star_icon_1" />

            <ImageView
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="4dp"
                android:background="@drawable/star_icon_1" />

            <ImageView
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="4dp"
                android:background="@drawable/star_icon_1" />

            <ImageView
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="4dp"
                android:background="@drawable/star_icon" />

            <TextView
                android:layout_width="53dp"
                android:layout_height="12dp"
                android:layout_marginStart="4dp"
                android:text="@string/reviews_text_view"
                android:textColor="@color/theme_text_grey"
                android:textSize="8sp"
                android:textStyle="bold" />
        </LinearLayout>

        <TextView
            android:layout_width="132dp"
            android:layout_height="20dp"
            android:layout_marginTop="256dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="30dp"
            android:layout_marginBottom="20dp"
            android:text="Avengers: End Game"
            android:textSize="14sp"
            android:textColor="@color/text_white_color"
            android:textStyle="bold"
            android:gravity="center" />

        <TextView
            android:layout_width="154dp"
            android:layout_height="12dp"
            android:layout_marginTop="276dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:text="137 MIN"
            android:textSize="8dp"
            android:textStyle="bold"
            android:textColor="@color/text_film_duration_grey"/>

    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>