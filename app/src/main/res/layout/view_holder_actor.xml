<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <ImageView
        android:id="@+id/actor_avatar"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="7dp"
        tools:src="@tools:sample/avatars"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/actor_name"
        android:layout_width="80dp"
        android:layout_height="32dp"
        android:layout_marginTop="6dp"
        android:text="@tools:sample/full_names"
        android:textColor="@color/text_white_color"
        android:textSize="12sp"
        android:textStyle="bold"
        android:maxLines="2"
        app:layout_constraintTop_toBottomOf="@+id/actor_avatar"
        app:layout_constraintStart_toStartOf="@id/actor_avatar"
        app:layout_constraintEnd_toEndOf="@+id/actor_avatar"/>

</androidx.constraintlayout.widget.ConstraintLayout>